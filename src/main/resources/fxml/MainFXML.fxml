<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="hu.atka.quiphutsfx.view.controller.MainController" fx:id="pane">
	<VBox>
		<Button text="Load prompts" onAction="#handleLoadPromptsButton"/>
		<Button text="Save prompts" onAction="#handleSavePromptsButton"/>
		<Button text="Generate Folder" onAction="#handleGenerateFolderButton"/>
	</VBox>
	<ListView fx:id="promptListView"/>
	<VBox>
		<HBox>
			<TextField fx:id="promptField"/>
			<Button text="Add &#x3C;BLANK&#x3E;" onAction="#handleAddBlankToPromptButton"/>
		</HBox>
		<HBox>
			<Button text="Update" onAction="#handleUpdatePromptButton"/>
			<Button text="Add as new" onAction="#handleAddPromptButton"/>
		</HBox>
	</VBox>
</HBox>
